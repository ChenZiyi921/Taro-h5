.library
    .list
        display: flex
        align-items: center
        justify-content: space-between
        margin-top: 20px
        border: 2px solid #09f
        border-radius: 20px
        padding-right: 20px
        box-sizing: border-box
        overflow hidden
        box-shadow: 6px 8px 20px 0px rgba(171, 188, 205, 0.35), -6px -8px 20px 0px #FFFFFF;
        .image
            width: 200px
            height: 140px
            object-fit: cover
        .title
            flex: 1
            padding: 0 20px
            box-sizing: border-box
        .state
            padding: 0 10px
            border-radius: 10px
            font-size: 24px
            color: #fff
